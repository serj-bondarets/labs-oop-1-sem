        <Label Content="color&#xD;&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,176,0,0" Height="23"/>
        <TextBox Name="xText" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Margin="86,64,0,0" TextChanged="XText_TextChanged"/>
        <TextBox Name="yText" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Margin="86,106,0,0" TextChanged="YText_TextChanged"/>
        <TextBox Name="colorText" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Margin="86,176,0,0"/>
        <TextBox Name="radiusText" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Margin="86,144,0,0" TextChanged="RadiusText_TextChanged"/>

    </Grid>
</Window>
