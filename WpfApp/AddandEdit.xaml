        mc:Ignorable="d"
        Title="AddandEdit" Height="349.2" Width="283.6">
    <Grid Margin="0,0,3,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="167*"/>
            <ColumnDefinition Width="107*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <ComboBox Name="TypeShape" HorizontalAlignment="Left" Margin="51,23,0,0" VerticalAlignment="Top" Width="181" Height="22" Grid.ColumnSpan="2" SelectionChanged="TypeShape_SelectionChanged"/>
        <Button x:Name="Add"  Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Width="220" Margin="35,218,0,0" Height="43" RenderTransformOrigin="0.519,1.149" Grid.ColumnSpan="2" Click="Add_Click"/>
        <Button x:Name="Eddit" Content="Edit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="220" Margin="35,266,0,0" Height="43" Grid.ColumnSpan="2" Click="Eddit_Click"/>
